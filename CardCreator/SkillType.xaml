<UserControl x:Class="CardCreator.SkillType"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardCreator"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="800"
             Visibility="Visible">
    <Grid Width="800" Height="300">
        <Label Content="Type" Margin="10,10,0,0" Style="{StaticResource LabelStyle}"/>
        <ComboBox x:Name="SkillTypeCombo" Margin="0,50,0,0" Width="170" Style="{StaticResource ComboStyle}" SelectionChanged="UpdateView"/>
        <local:Skill x:Name="Skill" Style="{StaticResource UserStyle}"/>
        <local:Heal x:Name="Heal" Style="{StaticResource UserStyle}"/>
        <local:Cure x:Name="Cure" Style="{StaticResource UserStyle}"/>
    </Grid>
</UserControl>

<UserControl x:Class="CardCreator.Cure"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CardCreator"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600"
             Visibility="Visible">
    <Grid Width="600" Height="300">
        <Label Content="Effect" Margin="10,10,0,0" Style="{StaticResource LabelStyle}"/>
        <ComboBox x:Name="Effect" Margin="10,50,0,0" Width="250" Style="{StaticResource ComboStyle}" SelectionChanged="UpdateView"/>
        
        <Label Content="Num" Margin="270,10,0,0" Style="{StaticResource LabelStyle}"/>
        <ComboBox x:Name="Num" Margin="270,50,0,0" Width="70" Style="{StaticResource ComboStyle}" SelectionChanged="UpdateView"/>

        <Label Content="Area" Margin="350,10,0,0" Style="{StaticResource LabelStyle}"/>
        <ComboBox x:Name="Area" Margin="350,50,0,0" Width="70" Style="{StaticResource ComboStyle}" SelectionChanged="UpdateView"/>

        <Label Content="Speed" Margin="430,10,0,0" Style="{StaticResource LabelStyle}"/>
        <ComboBox x:Name="Speed" Margin="430,50,0,0" Width="70" Style="{StaticResource ComboStyle}" SelectionChanged="UpdateView"/>
    </Grid>
</UserControl>

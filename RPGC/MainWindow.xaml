<Window x:Class="RPGC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPGC"
        mc:Ignorable="d"
        Title="RPG Calculator" Height="639" Width="1016">
    <Grid>
        <Grid Margin="0,0,0,0">
            <local:BoardControl x:Name="Board" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" />
        </Grid>
        <Grid Margin="0,0,0,0">
            <local:EnemyControl x:Name="Enemy" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,400,0,0" />
        </Grid>
        <Grid Margin="400,0,0,0">
            <local:PlayerControl x:Name="Player1" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <local:PlayerControl x:Name="Player2" Margin="300,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <local:PlayerControl x:Name="Player3" Margin="0,300,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <local:PlayerControl x:Name="Player4" Margin="300,300,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" />
        </Grid>
    </Grid>

</Window>
